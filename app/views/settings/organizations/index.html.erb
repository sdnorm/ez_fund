<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
    <%= render "shared/settings_nav" %>

    <main class="space-y-6 sm:px-6 lg:col-span-9 lg:px-0">
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Your Organizations</h3>
          
          <div class="mt-5 divide-y divide-gray-200">
            <% @organizations.each do |org| %>
              <div class="py-4">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="text-base font-medium text-gray-900"><%= org.name %></h4>
                    <p class="mt-1 text-sm text-gray-500">
                      <%= pluralize(org.users.count, "member") %>
                    </p>
                  </div>
                  <%= link_to "Manage", edit_settings_organization_path(org), 
                      class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div> 